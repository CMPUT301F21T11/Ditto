<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:id="@+id/addHabitFragement"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:orientation= "vertical">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/pub"
        android:textOff="@string/priv"
        android:textOn="@string/pub" />


    <EditText
        android:id="@+id/title_editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/habit_title"
        android:inputType="textPersonName"
        android:maxLength="40" />


    <EditText
        android:id="@+id/reason_editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/reason"
        android:maxLength="30"
        android:inputType="textPersonName"
        android:layout_marginVertical="5dp"/>

    <com.google.android.material.switchmaterial.SwitchMaterial
        android:id="@+id/privacySwitch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/pub"
        android:textOn="@string/pub"
        android:textOff="@string/priv"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Days due">

    </TextView>

    <LinearLayout
        android:id="@+id/day_selection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/monday_select"
            android:button="@drawable/roundimage"
            android:scaleX="0.5"
            android:scaleY="0.5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/m"></CheckBox>

        <CheckBox
            android:id="@+id/tuesday_select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/t"></CheckBox>

        <CheckBox
            android:id="@+id/wednesday_select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/w"></CheckBox>

        <CheckBox
            android:id="@+id/thursday_select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/t"></CheckBox>

        <CheckBox
            android:id="@+id/friday_select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/f"></CheckBox>

        <CheckBox
            android:id="@+id/saturday_select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/s"></CheckBox>

        <CheckBox
            android:id="@+id/sunday_select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/s"></CheckBox>
    </LinearLayout>


</LinearLayout>
