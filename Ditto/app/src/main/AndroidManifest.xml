<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.team11.ditto">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Ditto">
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="MyHabitActivity"
            android:exported="true"/>
        <activity
            android:name="UserProfileActivity"
            android:exported="true"
            android:label="Profile"
            />
        <activity
            android:name="FollowingActivity"
            android:exported="true"
            android:label="Following"
            android:parentActivityName="UserProfileActivity"
            />
        <activity
            android:name=".DueTodayActivity"
            android:exported="true"


            />
        <activity
            android:name="SearchUserActivity"
            android:exported="true"
            android:parentActivityName="UserProfileActivity"
            android:label="Search Users"
            android:windowSoftInputMode="adjustPan"
            />
        <activity
            android:name="FollowRequestActivity"
            android:exported="true"
            android:parentActivityName="UserProfileActivity"
            android:label="Follow Requests"/>

        <activity
            android:name="SignUpActivity"
            android:exported="true"
            android:label="Sign Up"
            />

        <activity
            android:name="SignInActivity"
            android:exported="true"
            android:label="Sign In"
            />

        <activity
            android:name="WelcomeActivity"
            android:exported="true"
            android:label="@string/app_name"
            />



        <activity
            android:name=".MyHabitsActivity"
            android:exported="true"
            />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>